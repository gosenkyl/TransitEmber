{{#power-datepicker selected=date onSelect=(action (mut date) value="date") as |dp|}}
  {{#dp.trigger tabindex="-1"}}
      <input type="text" class="form-control" readonly value={{moment-format selected 'MM-DD-YYYY'}}>
  {{/dp.trigger}}

  {{#dp.content class="dropdown-menu demo-datepicker-small"}}
    {{dp.nav}}
    {{dp.days}}
  {{/dp.content}}
{{/power-datepicker}}

{{#if getStopTimes.isRunning}}
  {{loading-widget text="LOADING STOP TIMES"}}
{{else}}
  {{#each filteredStopTimes as |stopTime|}}
    {{stop-time-widget stopTime=stopTime}}
  {{else}}
    {{noTimesText}}
  {{/each}}
{{/if}}