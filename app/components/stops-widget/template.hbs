{{route-widget route=route}}

{{#if getRouteToStops.isRunning}}
  {{loading-widget text="LOADING STOPS"}}
{{else}}
  {{#each routeToStopsSorted as |routeToStop|}}
      {{#link-to "stop-times" routeId routeToStop.stop.id}}
        {{stop-widget stop=routeToStop.stop directionId=routeToStop.directionId routeId=route.id}}
      {{/link-to}}
  {{else}}
    NO STOPS
  {{/each}}
{{/if}}